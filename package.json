{
  "name": "cents-ideas",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "clear": "rimraf **/dist",
    "clear-node_modules": "rimraf **/node_modules",
    "clear-all": "yarn clear && yarn clear-node_modules",
    "bootstrap": "yarn install && yarn run build",
    "tsc": "tsc",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "start": "yarn start:docker",
    "start:docker": "docker-compose -f docker-compose.yml up --build",
    "start:docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "start:dev": "npm-run-all --parallel build:watch start:docker:dev",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "typescript": "^3.5.3"
  }
}
