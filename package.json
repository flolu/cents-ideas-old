{
  "name": "cents-ideas",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "build:watch": "tsc --build --watch packages",
    "bootstrap": "yarn install && yarn run build",
    "start:gateway:watch": "nodemon packages/gateway/dist/index.js",
    "start:dev": "npm-run-all --parallel build:watch start:gateway:watch"
  },
  "devDependencies": {
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^3.5.3"
  }
}
