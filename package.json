{
  "name": "cents-ideas",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "bootstrap": "yarn install && yarn run build",
    "start": "docker-compose -f docker-compose.yml up --build",
    "start:docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "start:dev": "npm-run-all --parallel build:watch start:docker:dev",
    "test": "yarn workspaces run test",
    "heroku-prebuild": "yarn bootstrap"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  }
}
